<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p><strong>Reviews:</strong></p>
<ul>
  <% @restaurant.reviews.each do |r| %>
    <li>
    <% r.rating.times do  %>
      <i class="fas fa-star"></i>
    <% end  %>
    <% (5 - r.rating).times do  %>
      <i class="far fa-star"></i>
    <% end  %>


    <%= r.content %>
    </li>
  <% end %>
</ul>
<br>
<p><strong>Add a review</strong></p>
<%= simple_form_for [@restaurant, Review.new] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <% restaurant_id = @restaurant.id %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>



<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |
<%= link_to '+ Add a review', new_restaurant_review_path(@restaurant) %>


